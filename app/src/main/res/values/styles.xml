<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryRoundButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/round_shape_orange_r1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/prompt_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="TitleBlackTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/base_black</item>
        <item name="android:fontFamily">@font/prompt_medium</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SecondaryGrayTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/base_medium_gray</item>
        <item name="android:fontFamily">@font/prompt</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DescriptorGrayTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/base_light_gray</item>
        <item name="android:fontFamily">@font/prompt_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PrimaryInputField" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/base_black</item>
        <item name="android:fontFamily">@font/prompt_medium</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/base_light_gray</item>
        <item name="android:ems">10</item>


    </style>

</resources>