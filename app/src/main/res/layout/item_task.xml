<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_shape_white_r1"
    android:layout_marginBottom="10dp"

    >



    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/itemTaskTitle"
        style="@style/TitleBlackTextView"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Jucarie Extra"
        android:maxLength="16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/itemRewardPrize"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemStartDate"
        style="@style/SecondaryGrayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12-12-2023"

        android:paddingEnd="14dp"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/itemEndDate"
        app:layout_constraintEnd_toStartOf="@id/itemClaimTaskButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/itemEndDate"
        style="@style/SecondaryGrayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13-12-2023"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/itemClaimTaskButton"
        android:paddingEnd="14dp"
        app:layout_constraintTop_toBottomOf="@+id/itemTaskTitle" />

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/itemRewardPrize"
        style="@style/SecondaryGrayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100p"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemTaskTitle" />

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/itemAsignedTo"
        style="@style/SecondaryGrayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member1"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemRewardPrize"
        app:layout_constraintTop_toBottomOf="@+id/itemTaskTitle" />

    <Button
        android:id="@+id/itemClaimTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text=" Claim "
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>