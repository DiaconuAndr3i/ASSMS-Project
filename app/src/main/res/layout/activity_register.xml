<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background_gray"
    tools:context=".activities.RegisterActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="-40dp"
        android:src="@drawable/round_shape_blue_r1"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        tools:layout_editor_absoluteY="20dp" />

    <LinearLayout
        android:id="@+id/loginLinearLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/round_shape_white_r1"

        android:layout_margin="26dp"


        android:orientation="vertical"
        android:paddingStart="26dp"
        android:paddingTop="34dp"
        android:paddingEnd="26dp"

        android:paddingBottom="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView2"
            style="@style/TitleBlackTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register to continue!"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView3"
            style="@style/SecondaryGrayTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create an account fast"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView4"
            style="@style/DescriptorGrayTextView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="30dp"
            android:drawablePadding="8dp"
            android:text="Email"
            app:drawableStartCompat="@drawable/ht_email" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/registerEmailEditText"
            style="@style/PrimaryInputField"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:backgroundTint="@color/base_light_gray"
            android:ems="10"

            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textView42"
            style="@style/DescriptorGrayTextView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="30dp"
            android:drawablePadding="8dp"
            android:text="Name"
            android:drawableTint="@color/base_light_gray"
            app:drawableStartCompat="@drawable/baseline_person_outline_24" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/registerNameEditText"
            style="@style/PrimaryInputField"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:backgroundTint="@color/base_light_gray"
            android:ems="10"

            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView44"
            style="@style/DescriptorGrayTextView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="30dp"
            android:drawablePadding="8dp"
            android:text="Password"
            app:drawableStartCompat="@drawable/ht_password" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/registerPasswordEditText"
            style="@style/PrimaryInputField"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:backgroundTint="@color/base_light_gray"
            android:ems="10"

            android:inputType="textPassword" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerSubmitButton"
            style="@style/PrimaryRoundButton"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"


            android:text="Register" />
    </LinearLayout>

    <TextView
        android:id="@+id/registerNoAccountRegisterTextView"
        style="@style/DescriptorGrayTextView"
        android:textColor="@color/base_light_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:text="Already have an account ? Sign in"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/loginLinearLayoutMain"
        />

</androidx.constraintlayout.widget.ConstraintLayout>